{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"paths": {
			"~*": ["src/main/ts/*"]
		},
		"sourceMap": true,
		"strict": true,
		"target": "es6"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
